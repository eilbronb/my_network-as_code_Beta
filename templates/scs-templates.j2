{% if loopback_interface is defined %}
{% for key, value in loopback_interface.items() %}
set network interface loopback units loopback.{{ key }} adjust-tcp-mss enable no
set network interface loopback units loopback.{{ key }} ip {{ value[ip] }}
set network interface loopback units loopback.{{ key }} interface-management-profile Mgmt
set network interface loopback units loopback.{{ key }} comment {{ key[description] }}
{% endfor %}
{% endif %}


{{% if tunnel_interface is defined %}}
{% for key, value in tunnel_interface.items() %}
set network interface tunnel units tunnel.{{ key }} comment {{ key[description] }}
{% endfor %}
{% endif %}
